<h1>Listing cities</h1>

<%= link_to 'New City', new_city_path %>


<div id="city">
  <input class="search" placeholder="Buscar" />

  <button class="sort" data-sort="nombre">
    Ordenar por Nombre
  </button>
    <table  class="table table-bordered table-condensed table-hover">

      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="list">
        <% @cities.each do |city| %>
          <tr>
            <td class="nombre"><%= city.name %></td>
            <td><%= link_to 'Show', city %></td>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<script>
    var options = {
        valueNames: ['nombre']
    };

    var userList = new List('city', options);
</script>