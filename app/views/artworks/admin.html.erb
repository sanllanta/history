<!-- Page Heading -->
<h1>Listado de obras</h1>
<%= link_to 'Nueva obra', new_artwork_path %>
<div id="obras">
    <input class="search" placeholder="Buscar" />
    <button class="sort" data-sort="titulo">
      Ordenar por Nombre
    </button>
    <button class="sort" data-sort="identificador">
      Ordenar por Id
    </button>

    <table  class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th><%= sortable 'id' %></th>
          <th><%= sortable 'title' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="list">
        <% @artworks.each do |artwork| %>
          <tr>
            <td class="identificador"><%= artwork.id %></td>
            <td class="titulo"><%= artwork.title %></td>
            <td><%= link_to 'Show', artwork %></td>
            <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
            <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>
<%= will_paginate @artworks,  renderer: BootstrapPagination::Rails %>

<script>
    var options = {
        valueNames: ['titulo'],
        valueNames: ['identificador']
    };

    var userList = new List('obras', options);
</script>