<div class="container" id="contact_image">
    <section id="contact">
            <div class="row">
              <div class="col-md-12 text-center">
                <h2 class="section-heading">Contáctenos</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <form name="sentMessage" id="contactForm" novalidate>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control input-sm" placeholder="Nombre *" id="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group">
                        <input type="email" class="form-control input-sm" placeholder="Correo *" id="email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group">
                        <input type="tel" class="form-control input-sm" placeholder="Teléfono*" id="phone" required data-validation-required-message="Please enter your phone number.">
                        <p class="help-block text-danger"></p>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <textarea class="form-control " rows="2" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                        <p class="help-block text-danger"></p>
                      </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                      <div id="success"></div>
                      <button type="submit" class="btn btn-xl">Enviar</button>
                    </div>
                  </div>
                </form>
            </div>
          </div>
    </section>
</div>
