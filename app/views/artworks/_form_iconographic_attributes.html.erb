<div class="control-group">

  <%= ff.fields_for :iconographic_attributes do |iconographic_attribute_fields| %>
      <%= iconographic_attribute_fields.label :name,"Iconographic Attribute", :class => 'control-label' %>
      <div class="controls">
        <%= iconographic_attribute_fields.text_area :name%>
        <% if params[:action] == "edit" %>
            <br>
            <%= iconographic_attribute_fields.check_box :_destroy %>
            <%= iconographic_attribute_fields.label :_destroy , "Eliminar Iconographic Attribute"%>
        <% end %>
      </div>
  <% end %>
  <%= error_span(@artwork[:iconographic_attribute]) %>
</div>